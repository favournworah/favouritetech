<%- include('../partials/header') %>
<style>
  a {
    text-decoration: none;
  }
  td {
    width: 20px;
  }
</style>
<table class="table table-dark table-striped">
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Description</th>
    <th><a href="/addgraphics"> Add graphics </a></th>
  </tr>
</table>

<div class="row">
  <% graphics.forEach(graphic=>{ %>
  <div class="col-lg-6">
    <div class="container">
      <h2>Graphics</h2>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Description</th>
            <th><a href="/addgraphics"> Add graphics </a></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= graphic.title %></td>
            <td>
              <img
                class="img-fluid rounded-3"
                src="/uploads/<%= graphic.img %>"
                width="30px"
                height="20px"
              />
            </td>
            <td><%= graphic.snippet %></td>
            <td>
              <a href="/addgraphics" class="text-light px-2"
                ><i class="fas fa-plus-square"></i
              ></a>
              <a href="/admin/edit/<%= graphic.id %> " class="text-light px-2"
                ><i class="fas fa-edit"></i
              ></a>
              <a href="/admin/<%= graphic.slug %> " class="text-light px-2"
                ><i class="fas fa-eye"></i
              ></a>
              <form action="/admin/<%= graphic.id %>?_method=DELETE">
                <button>
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% }) %>
</div>
<%- include('../partials/scripts') %>
